<Page x:Class="WpfApp1.EditWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d"
      Title="EditWindow">

    <Grid>

        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="Name" Width="360" />
                <TextBox x:Name="NameTextBox" Margin="0,5" Height="30" Width="360" />

                <TextBlock Text="Surname" Width="360"/>
                <TextBox x:Name="SurnameTextBox" Margin="0,5" Height="30" Width="360"/>

                <TextBlock Text="Yaş" Width="360"/>
                <TextBox x:Name="Age" Margin="0,5" Height="30" Width="360"/>

                <TextBlock Text="Email" Margin="0,10,0,0" Width="360"/>
                <TextBox x:Name="EmailTextBox" Margin="0,5" Height="30" Width="360" />

                <TextBlock Text="Doğum Tarihi" Margin="0,10,0,0" Width="360"/>
                <DatePicker  x:Name="Birthday" Margin="0,5" Height="30" Width="360" />

                <TextBlock Text="Okulu" Margin="0,10,0,0" Width="360"/>
                <TextBox x:Name="University" Margin="0,5" Height="30" Width="360" />

                <TextBlock Text="Çalışma Deneyimi(yıl)" Margin="0,10,0,0" Width="360"/>
                <TextBox x:Name="Experience" Margin="0,5" Height="30" Width="360" />

                <TextBlock Text="Password" Margin="0,10,0,0" Width="360"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5" Height="30" Width="360" />

                <Button Content="Save" Margin="0,20,0,0" Height="35" Width="100" Click="SaveBtn_Click"/>
            </StackPanel>
        </ScrollViewer>
        
        
    </Grid>
</Page>
