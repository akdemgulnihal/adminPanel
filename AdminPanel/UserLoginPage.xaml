<Window x:Class="AdminPanel.UserLoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="500"
        Title="User Login" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ButtonStyleWithDataTrigger" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static local:IsGreaterThanConverter.Instance}, ConverterParameter=1400}" Value="True">
                    <Setter Property="Background" Value="AliceBlue"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Width="300"
            Height="400"
            Background="White"
            CornerRadius="6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                              Direction ="-90" 
                              RenderingBias ="Quality" 
                              ShadowDepth ="2" 
                              Color ="Gray" />
        </Border.Effect>

        <StackPanel Orientation="Vertical"
                    Margin="20">
            <TextBlock Text="Standart Kullanıcı Girişi" 
                       FontSize="23"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontWeight="Bold"
                       Padding="10"
                       />
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Kullanıcı Adı" 
                   Grid.Row="0"
                   Margin="0,15"
                   HorizontalAlignment="Left"/>
                <TextBox x:Name = "NameTextBox" Grid.Column="1"
                         Grid.Row="1"
                         Padding="0,5"
                         Width="255"
                         BorderThickness="0,0,0,1"
                         HorizontalAlignment="Left"
                         Text="örnek_kullanici" 
                         GotFocus="NameTextBox_GotFocus"
                         LostFocus="NameTextBox_LostFocus"/>
                <TextBlock Text="Şifre" 
                   Grid.Row="2"
                   Margin="0,15"
                   HorizontalAlignment="Left"/>
                <PasswordBox x:Name = "PasswordBox" Grid.Row="3"
                             Password="ksifre123"
                             Padding="0,5"                           
                             Width="255"
                             BorderThickness="0,0,0,1"
                             HorizontalAlignment="Left"
                             GotFocus="PasswordBox_GotFocus"
                             LostFocus="PasswordBox_LostFocus"/>
            </Grid>

            <Button x:Name="LoginBtn" 
                    Content="Login" 
                    Foreground="White"
                    Height="35"
                    Width="250" 
                    Style="{StaticResource ButtonStyleWithDataTrigger}"
                    Margin="0,25"
                    Click="LoginBtn_Click">
            </Button>

            <Button x:Name="SwitchBtn" 
                    Content="Kullanıcı Tipini Değiştir" 
                    Foreground="White"
                    Height="20"
                    Width="185" 
                    Style="{StaticResource ButtonStyleWithDataTrigger}"
                    Margin="0,2"
                    Click="SwitchBtn_Click">
            </Button>

        </StackPanel>
    </Border>

</Window>
