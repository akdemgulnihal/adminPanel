<Window x:Class="AdminPanel.UserHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Admin Home Page" Width="800" Height="600">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <!-- Use Border to apply CornerRadius -->
    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Left Menu -->
            <Grid Grid.RowSpan="2" Background="Black" Margin="0,105,0,0">
                <StackPanel Margin="0,51,0,0">
                    <TextBlock Text="Ad Soyad" Foreground="White" FontSize="22" FontWeight="SemiBold" TextAlignment="Center" Margin="5 25 0 10"/>
                    <TextBlock Text="Standart User" Foreground="White" FontSize="10" FontWeight="SemiBold" FontStyle="Italic" TextAlignment="Center" Margin="5 10 0 10"/>
                    <Separator Margin="25" Height="0.8" Background="#7950f2"/>

                    <Button Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="HomeVariant" Width="15" Height="15"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AccountMultipleOutline" Width="15" Height="15"/>
                            <TextBlock Text="Members"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource menuButton}" Click="Button_Click">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AccountMultipleOutline" Width="15" Height="15"/>
                            <TextBlock Text="Edit Profile"/>
                        </StackPanel>
                    </Button>

                    <!-- Add more menu buttons as needed -->

                    <Button Style="{StaticResource menuButton}" VerticalAlignment="Bottom" Margin="15, 20, 15, 20" Click="LogoutButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Logout" Width="15" Height="15"/>
                            <TextBlock Text="Logout"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="30 30 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter -->
                <Grid Width="300" HorizontalAlignment="Left">
                    <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}"/>
                    <Icon:PackIconMaterial Kind="Magnify" Width="15" VerticalAlignment="Center" Margin="0 0 15 0" HorizontalAlignment="Right"/>
                </Grid>

                <!-- Members DataGrid -->
                <DataGrid x:Name="userDataGrid" Grid.Row="5" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="True" CanUserSortColumns="True" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*" />
                        <DataGridTextColumn Header="Login Status" Binding="{Binding LoginStatus}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>

</Window>
